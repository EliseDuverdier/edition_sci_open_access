<p id="notice"><%= notice %></p>

<h1>Reading List Folders</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reading_list_folders.each do |reading_list_folder| %>
      <tr>
        <td><%= reading_list_folder.name %></td>
        <td><%= link_to 'Show', reading_list_folder %></td>
        <td><%= link_to 'Edit', edit_reading_list_folder_path(reading_list_folder) %></td>
        <td><%= link_to 'Destroy', reading_list_folder, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

