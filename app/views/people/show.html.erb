<% provide(:title, "#{@person.firstname} #{@person.lastname}") %>
<p id="notice"><%= notice %></p>

<% if !@person.status.nil? %>
<div class="chip">
    <%= @person.status %>
</div>
<% end %>

<div class="row">
  <div class="col s2">
    <%= gravatar_for(@person, size: 150)  %>
  </div>

  <div class="col s8">
    <h2 class="header"><%= @person.firstname %> <%= @person.lastname %></h2>
    <div class="chip">
      <%= @person.email %>
    </div>

    <% if ! @person.bio.nil? %>
    <blockquote>
      <%= @person.bio %>
    </blockquote>
    <% end %>
  </div>

  <div class="col s2">

    <div class="center">
      <%= link_to 'Research Gate', @person.research_gate_url, class: "btn" %>
      <br /> <br />
      <%= link_to 'Academia', @person.academia_url, class: "btn" %>
    </div>

      <p><%= @person.level if !@person.level.nil? %></p>
      <p><%= @person.country if !@person.country.nil? %></p>
  </div>
</div>

<% if !@person.get_papers.empty?  %>
    <h2>Papers</h2>

    <div class="collection">

      <% if is_logged_in_user @person %>
      <li><%= link_to 'Submit a new paper', new_paper_path, class: "btn dark-orange" %></li>
      <% end %>
      <% @person.get_papers.each do |paper| %>
      <%= link_to paper.title, paper, class: "collection-item" %>
      <% end %>
    </div>
<% else %>
    <%= link_to 'Publish a paper', new_paper_path, class: "btn-large dark-orange" %>

<% end %>


<% if is_logged_in_user @person %>
<div>
<h2>Manage your profile</h2>

    <%= link_to 'Edit profile',
        edit_person_path(@person),
        class: "btn" %>
        <br />

    <%= link_to 'Change your password',
        edit_password_path(@person),
        class: "btn" %>
        <br />

    <%= link_to 'Delete profile',
        @person, method: :delete,
        data: { confirm: 'Are you sure?' },
        class: "btn-flat" %>
<% end %>

</div>
